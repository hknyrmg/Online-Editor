{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@onlineide/components": [
        "dist/onlineide/components/onlineide-components",
        "dist/onlineide/components"
      ],
      "@onlineide/layout": [
        "dist/onlineide/layout/onlineide-layout",
        "dist/onlineide/layout"
      ],
      "@onlineide/core": [
        "dist/onlineide/core/onlineide-core",
        "dist/onlineide/core"
      ],
      "@onlineide/common": [
        "dist/onlineide/common/onlineide-common",
        "dist/onlineide/common"
      ]

    }
  }
}